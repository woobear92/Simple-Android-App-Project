<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.com.example.android.fitnessapp.MainActivity"
    tools:showIn="@layout/activity_main">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/woo"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/image_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#01579B"
        android:layout_marginLeft="60dp"
        android:text="Woo Kim Fitness"
        android:textSize="35sp"/>
    <TextView
        android:id="@+id/email_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="woobear92@gmail.com"
        android:textSize="20sp"
        android:textColor="#01579B"
        android:layout_below="@id/image_text_view"
        android:layout_marginLeft="90dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal Trainer"
        android:textColor="#01579B"
        android:textSize="20sp"
        android:layout_below="@id/email_text_view"
        android:layout_marginLeft="120dp"/>
</RelativeLayout>
